#--------------------------------------------------------------------
# ENVIRONMENT SETUP
#--------------------------------------------------------------------
# Mode aplikasi: development atau production
# development   = error messages ditampilkan, debugging lebih mudah
# production    = error disembunyikan, lebih aman
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP INFO / KONFIGURASI APLIKASI
#--------------------------------------------------------------------

# Base URL aplikasi - jangan lupa trailing slash (/)
# Untuk localhost: http://localhost:8080/
# Untuk production: https://yourdomain.com/
app.baseURL = 'http://localhost:8080/'

# Timezone aplikasi
# Lihat list: https://www.php.net/manual/en/timezones.php
app.appTimezone = 'Asia/Jakarta'

# Force HTTPS (true untuk production)
app.forceGlobalSecureRequests = false

#--------------------------------------------------------------------
# DATABASE / KONFIGURASI DATABASE MySQL
#--------------------------------------------------------------------

# Hostname/IP address server MySQL
# localhost   = server lokal (XAMPP, WAMP, etc)
# 127.0.0.1   = IP localhost
# db.example.com = server remote
database.default.hostname = localhost

# Nama database yang akan digunakan
database.default.database = penyewaan

# Username akun MySQL
database.default.username = root

# Password akun MySQL
# Kosongkan jika tidak ada password (default XAMPP)
database.default.password = 

# Driver database
# MySQLi = recommended untuk modern MySQL
# MySQL  = deprecated, jangan gunakan
database.default.DBDriver = MySQLi

# Prefix untuk nama table (optional)
# Contoh: tbl_users, tbl_kostum
# Kosongkan jika tidak perlu prefix
database.default.DBPrefix = 

# Port MySQL
# 3306 = default MySQL port
database.default.port = 3306

#--------------------------------------------------------------------
# SESSION / KONFIGURASI SESSION
#--------------------------------------------------------------------

# Driver session
# FileHandler       = menyimpan di file
# DatabaseHandler   = menyimpan di database (lebih aman)
# RedisHandler      = menyimpan di Redis (lebih cepat)
session.driver = 'DatabaseHandler'

# Nama cookie session
session.cookieName = 'ci_session'

# Durasi session dalam detik
# 7200 = 2 jam (default)
# 86400 = 1 hari
session.expiration = 7200

# Path session cookie
session.cookiePath = '/'

# Domain session cookie
session.cookieDomain = ''

# HTTPS only
session.cookieSecure = false

#--------------------------------------------------------------------
# ENCRYPTION / KONFIGURASI ENKRIPSI
#--------------------------------------------------------------------

# Secret key untuk enkripsi
# Generate key dengan: php spark key:generate
# JANGAN gunakan key default di production!
encryption.key = 

# Driver enkripsi
# OpenSSL = recommended
# Sodium  = alternatif lebih baru
encryption.driver = OpenSSL

#--------------------------------------------------------------------
# CONTENT SECURITY POLICY (CSP)
#--------------------------------------------------------------------

# Enable/disable Content Security Policy
contentsecuritypolicy.enable = false

# CSP header value (jika enable = true)
contentsecuritypolicy.header = "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

# Level logging
# critical = hanya error kritis
# error    = error saja
# debug    = semua termasuk debug
log.threshold = 4

# Handler logging
# File   = simpan di file
# Chrome = send ke Chrome DevTools
log.handlers = ['CodeIgniter\Logs\Handlers\FileHandler']

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Token CSRF
# CSRF = Cross-Site Request Forgery protection
security.tokenName = 'csrf_token'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'XSRF-TOKEN'

# Token regenerate setiap request
security.tokenRandomize = false

#--------------------------------------------------------------------
# OTHERS (OPTIONAL)
#--------------------------------------------------------------------

# Enable/disable error display
display_errors = 1

# Memory limit PHP
memory_limit = 256M

# Max upload size
upload_max_filesize = 100M
post_max_size = 100M

#--------------------------------------------------------------------
# DEVELOPMENT ONLY - REMOVE IN PRODUCTION
#--------------------------------------------------------------------

# Debugbar
debugbar.enabled = true
debugbar.displays = ['queries', 'vars', 'assets', 'files']

# Toolbar
toolbar.enabled = true

#--------------------------------------------------------------------
# NOTES
#--------------------------------------------------------------------

/*
PENTING:
1. Jangan commit .env file ke Git (gunakan .env.example)
2. Setiap developer harus buat .env sendiri
3. Untuk production, ubah CI_ENVIRONMENT = production
4. Generate encryption key dengan: php spark key:generate
5. Ganti database credentials sesuai server Anda

SETUP CHECKLIST:
[ ] Copy .env.example ke .env
[ ] Update app.baseURL
[ ] Update database credentials
[ ] Create database jika belum ada
[ ] Generate encryption key (production)
[ ] Test aplikasi dengan php spark serve
*/
